{{#auto-save/form id="advertiser-edit" as |form|}}
  <div class="card-body">
    <div class="row">
      <div class="col">
        {{advertiser/-fields/name
          form=form
          value=model.name
          on-change=(action "setName")
        }}
      </div>
    </div>
    <div class="row">
      <div class="col">
        {{advertiser/-fields/website
          class="mb-0"
          form=form
          value=model.website
          on-change=(action "setWebsite")
        }}
      </div>
      <div class="col">
        {{advertiser/-fields/external-id
          class="mb-0"
          form=form
          value=model.externalId
          on-change=(action "setExternalId")
        }}
      </div>
    </div>
  </div>
  <div class="card-footer text-right">
    {{confirm-button
      icon="trash"
      label="Delete"
      runningLabel="Deleting..."
      class="btn-danger"
      disabled=isActionRunning
      isRunning=isDeleting
      onConfirm=(action "delete")
    }}
  </div>
{{/auto-save/form}}

